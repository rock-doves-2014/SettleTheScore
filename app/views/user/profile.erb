<div class="container">

  <h1>Profile</h1>
  <h3>Welcome, <%= @user.name %>!</h3>
  <div id="user_pic"><%= gravatar_tag @user.email %></div>
  <h4>Current Confrontations</h4>
  <% @user.confrontations.each do |conf| %>
    <h5><a href="/confrontation/<%= conf.id %>"><%= conf.title %></a></h5>
  <% end %>

  <h4>Current Rebuttals</h4>
  <% @user.rebuttals.each do |reb| %>
    <h5><a href="/confrontation/<%= reb.confrontation_id %>"><%= reb.confrontation.title %></a></h5>
    <% if reb.counterargument == "Unanswered" %>
      <h5><a href="/rebuttal/<%= reb.confrontation.id %>/new">Answer!</a></h5>
    <% end %>
  <% end %>

</div>
